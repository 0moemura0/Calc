<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.expression" parent="TextAppearance.AppCompat.Body1">
        <item name="android:gravity">right</item>
        <item name="android:textSize">60dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="AppTheme.expression.result">
        <item name="android:textSize">50dp</item>

    </style>

    <style name="AppTheme.button" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/btn_shape</item>
        <item name="android:layout_height">98dp</item>
        <item name="android:layout_width">102dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>